{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "ExpressJs",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "noEmit": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "."
  },
  "include": ["**/*.ts"]
}
